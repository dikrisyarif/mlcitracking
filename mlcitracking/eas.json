{
  "cli": {
    "version": ">= 16.13.2",
    "appVersionSource": "remote"
  },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal"
    },
    "preview": {
      "distribution": "internal",
      "android": {
        "buildType": "apk"  // hasilnya .apk → bisa diinstall langsung
      }
    },
    "production": {
      "android": {
        "buildType": "aab"  // hasilnya .aab → upload ke Play Store
      },
      "autoIncrement": true
    }
  },
  "submit": {
    "production": {}
  }
}
